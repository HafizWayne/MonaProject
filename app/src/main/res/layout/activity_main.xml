<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr40bff003c43"
        android:paddingTop="412dp"
        android:paddingBottom="400dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_placeholder"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/splash_text"
                        android:textAlignment="center"
                        android:textColor="#029eb1"
                        android:textSize="70sp"
                        android:textStyle="bold"
                        android:transitionName="shared_element_title"/>

                    <TextView
                        android:id="@+id/mona_description"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/mona_desc"
                        android:textColor="#e3fef7"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="111dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/cr30bff029eb1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:onClick="onLoginClick"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:text="@string/login"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/cr30bd4e3fef7"
                android:paddingVertical="14dp"
                android:layout_marginBottom="13dp"
                android:layout_marginHorizontal="111dp"
                android:clipChildren="false"
                android:text="@string/sign_up"
                android:textStyle="bold"
                android:onClick="onRegisterClick"
                android:textSize="18sp"
                android:clipToPadding="false"
                android:orientation="vertical">

            </Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>