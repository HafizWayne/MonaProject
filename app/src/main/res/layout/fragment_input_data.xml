<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r5qk390qmmj3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr40bff003c43"
        android:paddingVertical="9dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rezmxxrur0h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="55dp"
                android:layout_marginHorizontal="38dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rmci55gqrzwp"
                    android:textColor="#d9d9d9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Add Expenses"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r7qxqfxzeod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_crop"
                android:paddingTop="39dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ri65hsie2me9"
                    android:textColor="#d9d9d9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="66dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Date"
                    />
                <EditText
                    android:id="@+id/date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/cr18bd4e3fef7"
                    android:padding="10dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:layout_marginBottom="34dp"
                    android:layout_marginHorizontal="55dp"
                    android:orientation="horizontal" />
                <TextView
                    android:id="@+id/catgeory_input"
                    android:textColor="#d9d9d9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="65dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Category"
                    />
                <EditText
                    android:id="@+id/category_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/cr18bd4e3fef7"
                    android:paddingVertical="13dp"
                    android:inputType="text"
                    android:paddingHorizontal="18dp"
                    android:layout_marginBottom="34dp"
                    android:layout_marginHorizontal="55dp"
                    android:orientation="horizontal">
                </EditText>
                <TextView
                    android:id="@+id/ro5aukd30olm"
                    android:textColor="#d9d9d9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="65dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Amount"
                    />
                <EditText
                    android:id="@+id/amount_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr18bd4e3fef7"
                    android:paddingVertical="14dp"
                    android:inputType="text"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="54dp"
                    android:orientation="vertical">
                </EditText>
                <TextView
                    android:id="@+id/rvzn6spdeklk"
                    android:textColor="#d9d9d9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="66dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Expense Title"
                    />
                <EditText
                    android:id="@+id/title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr18bd4e3fef7"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="11dp"
                    android:layout_marginBottom="57dp"
                    android:inputType="text"
                    android:layout_marginHorizontal="55dp"
                    android:orientation="vertical">
                </EditText>
                <Button
                    android:id="@+id/button_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr30bff029eb1"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="203dp"
                    android:layout_marginHorizontal="130dp"

                    android:text="save"
                    android:orientation="vertical">
                </Button>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/black"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>